pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                //git url: 'https://github.com/aweiteka/jenkins-on-openshift.git'
                // only checkout if Jenkins config has changed
                checkout([$class: 'GitSCM', branches: [[name: 'multi-pipeline']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'PathRestriction', excludedRegions: '''ansible/* app/* Jenkinsfile''', includedRegions: 'jenkins/*']], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/aweiteka/jenkins-on-openshift.git']]])
        stage('Trigger build') {
            steps {
                openshiftBuild bldCfg: 'jenkins-custom'
            }
        }
        stage('Trigger deployment') {
            steps {
                openshiftDeploy depCfg: 'jenkins'
            }
        }
    }
}
